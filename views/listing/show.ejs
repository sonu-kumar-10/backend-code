<% layout("/layouts/boilerplate") %>

<body>
  <div class="row">
    <div class="col-8 offset-2">
      <h3>Create a New Listing</h3>
      <form action="/listings" method="post" novalidate class="needs-validation" enctype="multipart/form-data">
        <div class="mb-3">
          <label for="title" class="form-label">Title</label>
          <input name="listing[title]" placeholder="Add a Title" type="text" class="form-control" required>
          <div class="valid-feedback">Title Looks Good</div>
        </div>

        <div class="mb-3">
          <label for="description" class="form-label">Description</label>
          <textarea name="listing[description]" class="form-control" required></textarea>
          <div class="invalid-feedback">Please enter some description</div>
        </div>

        <div class="mb-3">
          <label for="image" class="form-label">Upload Listing Image</label>
          <input name="listing[image]" type="file" class="form-control">
        </div>

        <div class="row">
          <div class="mb-3 col-md-4">
            <label for="price" class="form-label">Price</label>
            <input name="listing[price]" placeholder="1234" class="form-control" required>
            <div class="invalid-feedback">Please enter a valid price</div>
          </div>
          <div class="mb-3 col-md-8">
            <label for="country" class="form-label">Country</label>
            <input name="listing[country]" placeholder="Enter country" type="text" class="form-control" required>
            <div class="invalid-feedback">Please enter a country name</div>
          </div>
        </div>

        <div class="mb-3">
          <label for="location" class="form-label">Location</label>
          <input name="listing[location]" placeholder="Enter location" type="text" class="form-control" required>
          <div class="invalid-feedback">Please enter a valid location</div>
        </div>

        <!-- Latitude and Longitude Fields -->
        <div class="mb-3">
          <label for="latitude" class="form-label">Latitude</label>
          <input name="listing[geometry][coordinates][1]" type="number" step="any" class="form-control" required placeholder="Enter latitude">
        </div>

        <div class="mb-3">
          <label for="longitude" class="form-label">Longitude</label>
          <input name="listing[geometry][coordinates][0]" type="number" step="any" class="form-control" required placeholder="Enter longitude">
        </div>

        <button class="btn btn-dark mb-3 Add-btn">Add</button>
      </form>
    </div>
  </div>

  <!-- Map Container -->
  <div id="Map" style="height: 400px; width: 100%; margin-top: 20px;"></div>

  <!-- Include Maptiler Script -->
  <script src="https://unpkg.com/maptiler-map@2.0.0/dist/maptiler-map.js"></script>

  <script>
    // Initialize the map
    const map = new maptiler.Map({
      container: 'Map', // Map container ID
      style: "https://api.maptiler.com/maps/basic/style.json?key=UrG0IEiux6iyw6fu649Z", // Style URL with your API key
      center: [85.27, 25.96], // Longitude, Latitude
      zoom: 2,
    });

    // Add a marker at the default center
    const marker = new maptiler.Marker()
      .setLngLat([85.27, 25.96]) // Longitude, Latitude
      .addTo(map);
  </script>
</body>